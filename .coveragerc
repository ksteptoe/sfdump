[run]
branch = True
source = src/sfdump
omit =
    tests/*

    # Entrypoints
    */__main__.py
    *\__main__.py
    */db_app.py
    *\db_app.py
    */files_app.py
    *\files_app.py

    # Streamlit UI code - requires integration/e2e testing
    */viewer_app/apps/*
    *\viewer_app\apps\*
    */viewer_app/ui/*
    *\viewer_app\ui\*
    */viewer_app/preview/*
    *\viewer_app\preview\*
    */viewer_app/navigation/*
    *\viewer_app\navigation\*
    */viewer_app/config.py
    *\viewer_app\config.py

    # Complex scripts needing integration tests
    */download_missing_files.py
    *\download_missing_files.py

    # CLI command files - Click wiring, tested via integration
    */command_*.py
    *\command_*.py

    # CLI entry point
    */cli.py
    *\cli.py

    # Probe summary - complex visualization
    */probe_summary.py
    *\probe_summary.py

[report]
show_missing = True
skip_covered = True
